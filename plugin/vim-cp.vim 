" vim-cp.vim - Competitive programming for Vim
" Maintainer: Hamza Tamenaoul <https://hamza-tam.gitlab.io/>
" version: 0.2

function! Create_cp_env()
  let file = @%
  vsp makefile
  wincmd L
  execute "normal! ggdGiall:\<CR>g++ -o prog ".file." && ./prog < input.txt > output.txt\<CR>\<CR>clean:\<CR>rm -rf prog makefile input.txt output.txt\<ESC>gg"
  w
  sp output.txt
  w
  set number!
  sp input.txt
  w
  wincmd h
endfunction
